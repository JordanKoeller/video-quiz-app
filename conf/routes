# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

POST	/login						controllers.Application.verifyLogin

GET		/quizList					controllers.Application.quizList

GET		/fetch/:user				controllers.Application.fetch(user)

# Routing demos

GET		/routes/:num				controllers.RoutingDemo.singleIntArgument(num: Int)

GET		/routes						controllers.RoutingDemo.twoArguments(i: Int ?= 0, s:String)

GET		/regex/$id<\w+\d+>			controllers.RoutingDemo.singleStringArgument(id)

GET		/splat/*arg					controllers.RoutingDemo.singleStringArgument(arg)

GET		/todo						controllers.RoutingDemo.todo

# Json demo

GET		/json						controllers.JsonDemo.simpleObject

GET		/json/:course/:sect/:sem	controllers.JsonDemo.students(course, sect, sem)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
